<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <Style x:Key="DefaultWindow" TargetType="{x:Type Controls:MetroWindow}" BasedOn="{StaticResource CleanWindowStyleKey}" >
        <Setter Property="TitleCaps" Value="False" />
        <Setter Property="EnableDWMDropShadow" Value="True" />
        <Setter Property="TitleForeground" Value="{DynamicResource GrayBrush3}" />
        <Setter Property="TitlebarHeight" Value="35" />
    </Style>
</ResourceDictionary>