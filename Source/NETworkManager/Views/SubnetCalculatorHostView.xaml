<UserControl x:Class="NETworkManager.Views.SubnetCalculatorHostView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Views="clr-namespace:NETworkManager.Views"
        mc:Ignorable="d" >
    <TabControl Style="{StaticResource DefaultTabControl}">
        <TabItem Header="{DynamicResource String_Header_IPv4Calculator}">
            <Views:SubnetCalculatorIPv4CalculatorView Margin="10" />
        </TabItem>
        <TabItem Header="{DynamicResource String_Header_IPv4Splitter}">
            <Views:SubnetCalculatorIPv4SplitterView Margin="10" />
        </TabItem>
    </TabControl>
</UserControl>